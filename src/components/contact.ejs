<section class="content-section" id="contact">
	<header class="section-header">
		<h2>Get in touch</h2>
	</header>
	<div class="contact-email">
		via <a href="mailto:<%- contact.email %>" class="email-link"><span class="symbol">@</span><span class="label">email</span></a>
	</div>
	<div class="contact-social">
		<div class="social-lead">or around the web</div>
		<ul class="social-list">
		<% contact.social.forEach(function(network) { %>
			<li class="social-item">
				<a class="social-link" href="<%- network.url %>" target="_blank">
					<%- include('icons/icon-' + network.site + '.svg') %>
					<span class="social-username"><%= network.name %></span>
				</a>
			</li>
		<% }); %>
		</ul>
	</div>
</section>